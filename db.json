    </div>

    <div class="sync-status" id="sync-status"></div>

    <!-- –ú–æ–¥–∞–ª—å–Ω—ã–µ –æ–∫–Ω–∞ –∏ —Ñ–æ—Ä–º—ã -->
    <div class="auth-form" id="login-form">
        <button class="close-btn" id="close-login">‚úï</button>
        <h2>–í—Ö–æ–¥ –≤ –∞–∫–∫–∞—É–Ω—Ç</h2>
        <input type="text" id="login-username" placeholder="–ò–º—è –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è">
        <input type="password" id="login-password" placeholder="–ü–∞—Ä–æ–ª—å">
        <button id="login-submit">–í–æ–π—Ç–∏</button>
        <div class="auth-switch">
            –ù–µ—Ç –∞–∫–∫–∞—É–Ω—Ç–∞? <a id="switch-to-register">–ó–∞—Ä–µ–≥–∏—Å—Ç—Ä–∏—Ä–æ–≤–∞—Ç—å—Å—è</a>
        </div>
    </div>

    <div class="admin-panel" id="admin-panel">
        <button class="close-btn" id="close-admin">‚úï</button>
        <h2>–ê–¥–º–∏–Ω –ø–∞–Ω–µ–ª—å</h2>
        <input type="password" id="admin-password" placeholder="–í–≤–µ–¥–∏—Ç–µ –ø–∞—Ä–æ–ª—å">
        <button id="enable-admin">–í–∫–ª—é—á–∏—Ç—å –∞–¥–º–∏–Ω –º–æ–¥</button>
        <button id="view-logs">–ü—Ä–æ—Å–º–æ—Ç—Ä –ª–æ–≥–æ–≤</button>
    </div>

    <script>
        // –ö–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏—è API
        const API_CONFIG = {
            baseURL: 'https://64d5d7f7613ee4426e97a0b1.mockapi.io/api/v1',
            endpoints: {
                videos: '/videos',
                comments: '/comments',
                logs: '/logs',
                users: '/users',
                banned: '/banned'
            }
        };

        // –û—Å–Ω–æ–≤–Ω—ã–µ –ø–µ—Ä–µ–º–µ–Ω–Ω—ã–µ
        let adminMode = false;
        let currentVideoId = null;
        let currentUser = null;
        let videos = [];
        let comments = {};
        let logs = [];
        let users = [];
        let bannedUsers = [];

        // API —Ñ—É–Ω–∫—Ü–∏–∏
        class APIService {
            static async get(resource) {
                try {
                    const response = await fetch(`${API_CONFIG.baseURL}${resource}`);
                    if (!response.ok) throw new Error('Network error');
                    return await response.json();
                } catch (error) {
                    console.error(`–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ ${resource}:`, error);
                    throw error;
                }
            }

            static async post(resource, data) {
                try {
                    const response = await fetch(`${API_CONFIG.baseURL}${resource}`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify(data)
                    });
                    if (!response.ok) throw new Error('Network error');
                    return await response.json();
                } catch (error) {
                    console.error(`–û—à–∏–±–∫–∞ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏—è ${resource}:`, error);
                    throw error;
                }
            }

            static async put(resource, data) {
                try {
                    const response = await fetch(`${API_CONFIG.baseURL}${resource}/${data.id}`, {
                        method: 'PUT',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify(data)
                    });
                    if (!response.ok) throw new Error('Network error');
                    return await response.json();
                } catch (error) {
                    console.error(`–û—à–∏–±–∫–∞ –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è ${resource}:`, error);
                    throw error;
                }
            }

            static async delete(resource, id) {
                try {
                    const response = await fetch(`${API_CONFIG.baseURL}${resource}/${id}`, {
                        method: 'DELETE'
                    });
                    if (!response.ok) throw new Error('Network error');
                    return await response.json();
                } catch (error) {
                    console.error(`–û—à–∏–±–∫–∞ —É–¥–∞–ª–µ–Ω–∏—è ${resource}:`, error);
                    throw error;
                }
            }
        }

        // –ó–∞–≥—Ä—É–∑–∫–∞ –¥–∞–Ω–Ω—ã—Ö
        async function loadData() {
            showSyncStatus('–ó–∞–≥—Ä—É–∑–∫–∞ –¥–∞–Ω–Ω—ã—Ö —Å —Å–µ—Ä–≤–µ—Ä–∞...');
            
            try {
                // –ó–∞–≥—Ä—É–∂–∞–µ–º –≤—Å–µ –¥–∞–Ω–Ω—ã–µ –ø–∞—Ä–∞–ª–ª–µ–ª—å–Ω–æ
                const [videosData, commentsData, logsData, usersData, bannedData] = await Promise.all([
                    APIService.get(API_CONFIG.endpoints.videos),
                    APIService.get(API_CONFIG.endpoints.comments),
                    APIService.get(API_CONFIG.endpoints.logs),
                    APIService.get(API_CONFIG.endpoints.users),
                    APIService.get(API_CONFIG.endpoints.banned)
                ]);

                videos = videosData || [];
                comments = commentsData || {};
                logs = logsData || [];
                users = usersData || [];
                bannedUsers = bannedData || [];

                // –ü—Ä–æ–≤–µ—Ä—è–µ–º –ª–æ–∫–∞–ª—å–Ω–æ–≥–æ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è
                const savedUser = localStorage.getItem('31tube-currentUser');
                if (savedUser) {
                    currentUser = JSON.parse(savedUser);
                    updateUserUI();
                }

                renderVideos();
                showSyncStatus('–î–∞–Ω–Ω—ã–µ –∑–∞–≥—Ä—É–∂–µ–Ω—ã!', true);

            } catch (error) {
                console.error('–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏:', error);
                loadFromLocalStorage();
                showSyncStatus('–ò—Å–ø–æ–ª—å–∑—É—é—Ç—Å—è –ª–æ–∫–∞–ª—å–Ω—ã–µ –¥–∞–Ω–Ω—ã–µ', false);
            }
        }

        // –†–µ–∑–µ—Ä–≤–Ω–∞—è –∑–∞–≥—Ä—É–∑–∫–∞ –∏–∑ localStorage
        function loadFromLocalStorage() {
            videos = JSON.parse(localStorage.getItem('31tube-videos')) || [];
            comments = JSON.parse(localStorage.getItem('31tube-comments')) || {};
            logs = JSON.parse(localStorage.getItem('31tube-logs')) || [];
            users = JSON.parse(localStorage.getItem('31tube-users')) || [];
            bannedUsers = JSON.parse(localStorage.getItem('31tube-banned')) || [];

            const savedUser = localStorage.getItem('31tube-currentUser');
            if (savedUser) {
                currentUser = JSON.parse(savedUser);
                updateUserUI();
            }

            renderVideos();
        }

        // –°–æ—Ö—Ä–∞–Ω–µ–Ω–∏–µ –¥–∞–Ω–Ω—ã—Ö
        async function saveVideo(video) {
            try {
                if (video.id) {
                    await APIService.put(API_CONFIG.endpoints.videos, video);
                } else {
                    const newVideo = await APIService.post(API_CONFIG.endpoints.videos, video);
                    video.id = newVideo.id;
                }
                // –î—É–±–ª–∏—Ä—É–µ–º –≤ localStorage
                localStorage.setItem('31tube-videos', JSON.stringify(videos));
                return true;
            } catch (error) {
                console.error('–û—à–∏–±–∫–∞ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏—è –≤–∏–¥–µ–æ:', error);
                // –°–æ—Ö—Ä–∞–Ω—è–µ–º —Ç–æ–ª—å–∫–æ –ª–æ–∫–∞–ª—å–Ω–æ
                localStorage.setItem('31tube-videos', JSON.stringify(videos));
                return false;
            }
        }

        // –ó–∞–≥—Ä—É–∑–∫–∞ –≤–∏–¥–µ–æ
        async function uploadVideo() {
            if (!currentUser) {
                alert('–ù–µ–æ–±—Ö–æ–¥–∏–º–æ –≤–æ–π—Ç–∏ –≤ —Å–∏—Å—Ç–µ–º—É');
                return;
            }

            const title = document.getElementById('video-title').value;
            const description = document.getElementById('video-description').value;
            const url = document.getElementById('video-url').value;

            if (!title || !url) {
                alert('–ó–∞–ø–æ–ª–Ω–∏—Ç–µ –æ–±—è–∑–∞—Ç–µ–ª—å–Ω—ã–µ –ø–æ–ª—è');
                return;
            }

            const newVideo = {
                title: title,
                author: currentUser.username,
                views: 0,
                date: new Date().toISOString().split('T')[0],
                likes: 0,
                comments: 0,
                url: url,
                description: description
            };

            videos.unshift(newVideo);
            
            const success = await saveVideo(newVideo);
            if (success) {
                showSyncStatus('–í–∏–¥–µ–æ –æ–ø—É–±–ª–∏–∫–æ–≤–∞–Ω–æ!', true);
            } else {
                showSyncStatus('–í–∏–¥–µ–æ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–æ –ª–æ–∫–∞–ª—å–Ω–æ', false);
            }

            // –û—á–∏—â–∞–µ–º —Ñ–æ—Ä–º—É
            document.getElementById('video-title').value = '';
            document.getElementById('video-description').value = '';
            document.getElementById('video-url').value = '';
            
            uploadForm.style.display = 'none';
            renderVideos();

            addLog('video', currentUser.username, `–û–ø—É–±–ª–∏–∫–æ–≤–∞–ª –≤–∏–¥–µ–æ "${title}"`);
        }

        // –û—Ç–æ–±—Ä–∞–∂–µ–Ω–∏–µ –≤–∏–¥–µ–æ
        function renderVideos() {
            const videoGrid = document.getElementById('video-grid');
            videoGrid.innerHTML = '';

            if (videos.length === 0) {
                videoGrid.innerHTML = '<p>–ü–æ–∫–∞ –Ω–µ—Ç –≤–∏–¥–µ–æ. –ë—É–¥—å—Ç–µ –ø–µ—Ä–≤—ã–º!</p>';
                return;
            }

            videos.forEach(video => {
                const videoCard = document.createElement('div');
                videoCard.className = 'video-card';
                videoCard.innerHTML = `
                    <div class="video-thumbnail" onclick="playVideo(${video.id})">
                        <img src="https://via.placeholder.com/300x169/ff0000/ffffff?text=31Tube" alt="${video.title}">
                    </div>
                    <div class="video-info">
                        <div class="video-title">${video.title}</div>
                        <div class="video-meta">
                            <span>${video.author}</span>
                            <span>${formatViews(video.views)} ‚Ä¢ ${formatDate(video.date)}</span>
                        </div>
                    </div>
                    <div class="video-actions">
                        <button onclick="likeVideo(${video.id})">
                            <i>üëç</i> <span>${video.likes}</span>
                        </button>
                        <button onclick="playVideo(${video.id})">
                            <i>üí¨</i> <span>${video.comments}</span>
                        </button>
                    </div>
                `;
                videoGrid.appendChild(videoCard);
            });
        }

        // –í—Å–ø–æ–º–æ–≥–∞—Ç–µ–ª—å–Ω—ã–µ —Ñ—É–Ω–∫—Ü–∏–∏
        function formatViews(views) {
            if (views >= 1000000) return (views / 1000000).toFixed(1) + ' –º–ª–Ω';
            if (views >= 1000) return (views / 1000).toFixed(1) + ' —Ç—ã—Å';
            return views;
        }

        function formatDate(dateString) {
            const date = new Date(dateString);
            const now = new Date();
            const diffDays = Math.floor((now - date) / (1000 * 60 * 60 * 24));
            
            if (diffDays === 0) return '—Å–µ–≥–æ–¥–Ω—è';
            if (diffDays === 1) return '–≤—á–µ—Ä–∞';
            if (diffDays < 7) return `${diffDays} –¥–Ω–µ–π –Ω–∞–∑–∞–¥`;
            if (diffDays < 30) return `${Math.floor(diffDays / 7)} –Ω–µ–¥–µ–ª—å –Ω–∞–∑–∞–¥`;
            return `${Math.floor(diffDays / 30)} –º–µ—Å—è—Ü–µ–≤ –Ω–∞–∑–∞–¥`;
        }

        function showSyncStatus(message, isSuccess = true) {
            const status = document.getElementById('sync-status');
            status.textContent = message;
            status.style.display = 'block';
            status.className = `sync-status ${isSuccess ? '' : 'error'}`;
            
            setTimeout(() => {
                status.style.display = 'none';
            }, 3000);
        }

        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è
        document.addEventListener('DOMContentLoaded', function() {
            loadData();
            
            // –û–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ —Å–æ–±—ã—Ç–∏–π
            document.getElementById('upload-btn').addEventListener('click', function() {
                document.getElementById('upload-form').style.display = 
                    document.getElementById('upload-form').style.display === 'none' ? 'block' : 'none';
            });
            
            document.getElementById('submit-video').addEventListener('click', uploadVideo);
            
            document.getElementById('admin-btn').addEventListener('click', function() {
                document.getElementById('admin-panel').style.display = 'block';
            });
            
            document.getElementById('enable-admin').addEventListener('click', function() {
                const password = document.getElementById('admin-password').value;
                if (password === '3651121') {
                    adminMode = true;
                    alert('–ê–¥–º–∏–Ω —Ä–µ–∂–∏–º –∞–∫—Ç–∏–≤–∏—Ä–æ–≤–∞–Ω!');
                    document.getElementById('admin-panel').style.display = 'none';
                } else {
                    alert('–ù–µ–≤–µ—Ä–Ω—ã–π –ø–∞—Ä–æ–ª—å!');
                }
            });
        });

        // –ó–∞–≥–ª—É—à–∫–∏ –¥–ª—è –æ—Å—Ç–∞–ª—å–Ω—ã—Ö —Ñ—É–Ω–∫—Ü–∏–π
        function playVideo(id) {
            alert(`–í–æ—Å–ø—Ä–æ–∏–∑–≤–µ–¥–µ–Ω–∏–µ –≤–∏–¥–µ–æ ${id}`);
        }

        function likeVideo(id) {
            const video = videos.find(v => v.id === id);
            if (video) {
                video.likes++;
                saveVideo(video);
                renderVideos();
            }
        }

        function addLog(type, author, details) {
            const log = {
                type: type,
                author: author,
                time: new Date().toLocaleString('ru-RU'),
                details: details
            };
            logs.unshift(log);
            // –°–æ—Ö—Ä–∞–Ω—è–µ–º –ª–æ–≥–∏
            localStorage.setItem('31tube-logs', JSON.stringify(logs));
        }

        function updateUserUI() {
            // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –∏–Ω—Ç–µ—Ä—Ñ–µ–π—Å–∞ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è
        }
    </script>
</body>
